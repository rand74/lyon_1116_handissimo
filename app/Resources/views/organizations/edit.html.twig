    <input type="submit" value="Créez" />
    {{ form_end(edit_form) }}
        {% if is_granted('ROLE_SOC') %}
        <li>
            <a href="{{ path('society_index') }}">Retour à votre fiche societé</a>
        </li>
        {% elseif is_granted('ROLE_ORG') %}
        <li>
            <a href="{{ path('organizations_index') }}">Retour à votre fiche</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="supprimer">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
