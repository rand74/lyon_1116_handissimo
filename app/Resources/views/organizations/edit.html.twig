                        <h3>Quelle équipe ?</h3>
                        <div class="form-group">
                            {{ form_label(edit_form.teamMembersNumber, "Combien y-a-t-il de personnes dans votre équipe : ", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            {{ form_errors(edit_form.teamMembersNumber) }}
                            <div class="col-sm-4">
                                {{ form_widget(edit_form.teamMembersNumber, {'attr': {'class': 'form-control'}}) }}
