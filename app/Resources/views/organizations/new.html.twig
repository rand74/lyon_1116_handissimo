                            {{ form_errors(form.organizationDescription) }}
                            <div class="col-sm-4">
                                {{ form_widget(form.organizationDescription, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>

                    <!-- end section who? -->

                    <!-- section we do what -->

                    <div class="col-xs-12 col-md-6 shadow-block">
